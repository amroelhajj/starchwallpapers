@model List<NASA>

@{
    ViewData["Title"] = "NASA Astronomy Picture of the Day";
}

<div>
    <h1><img src="~/images/NASA_logo.svg" height="42px" style="margin-right: 2px;" />Astronomy Picture of the Day</h1>
    <div>
        @foreach (NASA item in Model)
        {
            <h2>@item.Title</h2>
            <div class="wallpaper-container">
                <div class="wallpaper-wrapper">
                    <a href="@item.Hdimg" target="_blank"><img src="@item.Thumbnail" alt="NASA Image" height="400px"></a>
                </div>
                <div class="overlay-text"><a href="@item.Hdimg" target="_blank" style="color: inherit; text-decoration: inherit;">Download <img src="~/images/open_link.svg" height="15px" style="vertical-align:middle;"></a></div>
            </div>
            <h3>@item.Date</h3>
            <p>@item.Tooltip</p>
            <p>Copyright: @item.Copyright</p>
        }
    </div>
</div>